<h1>Admin::Orders#show</h1>
<p>Find me in app/views/admin/orders/show.html.erb</p>

<div class="container takasa">
  <div class="row">
    <div class="col-xs-12">
      <h2>注文履歴詳細</h2>
      
      <table>
       <tr>
        <th class= "order-show">購入者</th>
        <td><%= @order.member.last_name %> <%= @order.member.first_name %></td>

      </tr>
      <tr>
        <th class= "order-show">配送先</th>
        <td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th class= "order-show">支払い方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>

        <th>注文ステータス</th>
        <td>
          <%= form_for @order, url: admin_order_path do |f| %>
          　<%= f.select :order_status,["入金待ち","入金確認","製作中","発送準備中","発送済"] ,style: "margin-top:10px;#" %>
          <%= f.submit "更新" ,class: "btn btn-primary btn-sm" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
  <div class="orders-show">
    <div class=" col-xs-9">
      <table class="table ">
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
        <%  @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.item_name %></td>
          <td><%= order_item.items_tax_included_price %></td>
          <td><%= order_item.number_of_items %></td>
          <td><%= ((order_item.items_tax_included_price)*(order_item.number_of_items)) %> </td>
          
          <%= form_for order_item,url: admin_order_item_path(order_item) do |f| %>
          <td><%= f.select :making_status,["着手不可","製作待ち","製作中","製作完了"] %></td>
          <td><%= f.submit "更新" ,class:"btn btn-primary btn-xs" %></td>
          <% end %>
        </tr>
          <% end %>
      </table>
    </div>


    <div class="total">
     <h4>商品合計     <%= @order.total_fee %>円</h4>
     <h4>送料　　　    <%= @order.postage %>円</h4>
     <h4>請求金額合計　<%= (@order.total_fee+@order.postage) %>円</h4>
    </div>
  </div>

</div>



