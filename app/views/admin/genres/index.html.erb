<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>
<%= render 'admin/homes/error_form', js: @genre %>
<div class="container takasa ">
  <div class="row ">

    <h2>ジャンル一覧・追加</h2><br>

    <%= form_for @genre, url: admin_genres_path do |f| %>
    <div class="field row ">
      <lavel>ジャンル</lavel>
      <%= f.text_field :name %>

      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
    <% end %>
    <br>

    <table class = "table table-hover">
      <thead>
        <tr class="active">
          <th>ジャンル</th>
          <th></th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%#= genre.valid_invalid_status %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id) ,class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%#= paginate @genres %>
  </div>
</div>
