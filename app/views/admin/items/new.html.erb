<div class="container">
  <div class="row">
    <%= render 'admin/homes/error_form', js: @item %>
  <div class="col-md-6 offset-md-1">
<h2 class="text-left">商品新規登録</h2>
<p id="notice"></p>

<%= form_with model: @item, url: admin_items_path, method: :post do |item|  %>

<form>
  <label for="inputImage">商品画像</label>
  <%= item.file_field :image, placeholder: "選択されていません", accept: "image/*" %>

    <div class="form-group">
    <p id="notice"></p>
        <%= item.label :商品名 %>
        <%= item.text_field :name, class: "form-control name" %>
    <p id="notice"></p>
        <%= item.label :商品説明 %>
        <%= item.text_area :explanation, class: "form-control explanation" %><br>
    <p id="notice"></p>
        <%= item.label :"税抜価格(円)"%>
        <%= item.text_field :price, class: "form-control price" %>

    </div>

  <%= item.label:ジャンル %>
  <%= item.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %>

  <%= item.radio_button :is_stock, :true ,{:checked => true} %>
  <%= item.label :is_stock, "販売中" %>
  <%= item.radio_button :is_stock, :false %>
  <%= item.label :is_stock, "販売停止中" %>
<p id="notice"></p>
  <%= item.submit ' 新規登録 ' , class: "btn btn-success" %>

</form>
<% end %>
</div>
</div>
</div>
