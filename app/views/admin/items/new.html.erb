<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>

<%= render 'admin/homes/error_form', js: @item %>
<h2 class="mt-3">商品新規登録</h2>
<%= form_with model: @item, url: admin_items_path, method: :post do |item|  %>


  <div><label for="inputImage">商品画像</label>
  <%= item.file_field :image, placeholder: "選択されていません", accept: "image/*" %></div>

  <div class="form-group">
        <%= item.label :商品名 %>
        <%= item.text_field :name, class: "form-control title" %>
  </div>

  <div class="form-group">
        <%= item.label :商品説明 %>
        <%= item.text_area :explanation, class: "form-control body" %>
  </div>

  <div class="form-group">
        <%= item.label :税抜価格 %>
        <%= item.text_field :price, class: "form-control body" %> 円
  </div>
  <div>
  <%= item.label:ジャンル %>
  <%= item.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %>
  </div>
  <div>
  <%= item.radio_button :is_stock, :true ,{:checked => true} %>
  <%= item.label :is_stock, "販売中" %>
  <%= item.radio_button :is_stock, :false %>
  <%= item.label :is_stock, "販売停止中" %>
  </div>
  <div><p> <%= item.submit ' 新規登録 ' , class: "btn btn-success" %></p></div>

<% end %>
