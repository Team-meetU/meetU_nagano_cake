<h1>Admin::Items#index</h1>

<p>Find me in app/views/admin/items/index.html.erb</p>
<p><%= link_to "+", new_admin_item_path %></p>
<table>
    <thead>
      <tr><b>商品一覧</b></tr>
      <tr><th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="6"></th><br>
      </tr>
    </thead>
      <% @items.each do |item| %>
    <tbody>
      <tr>
      <td><%= item.id %></td>

      <td>
        <%= link_to item.name, admin_item_path(item.id) %>
      </td>

      <td><%= item.price.to_s(:delimited) %></td><%#[.to_s(:delimited)]３桁ごとにカンマ表記] %>

      <td><%= item.genre.name %></td>

      <td>
        <% if item.is_stock %><%# is_stockの情報を取得して在庫があるかチェック %>
        販売中  <%# true(初期値)の時の表示 %>
        <% else %>
        販売停止中  <%# false(売り切れ)の時の表示 %>
        <% end %>
      </td>
      </tr>
      <% end %>
    </tbody>
  </table>
