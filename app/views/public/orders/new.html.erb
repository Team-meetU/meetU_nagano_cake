<h2>注文情報入力</h2>
  <h3>支払い方法</h3>
  <%= form_with model: @order,url: confirm_orders_path,method: :post do |f| %>
    <%= f.radio_button :method_of_payment, Order.method_of_payments.key(0) %>
    <%= f.label :method_of_payment, Order.method_of_payments_i18n[:credit_card] %>

    <%= f.radio_button :method_of_payment, Order.method_of_payments.key(1) %>
    <%= f.label :method_of_payment, Order.method_of_payments_i18n[:transfer] %>

  <h3>お届け先</h3>
  <%= f.radio_button :delivery_address, 0, checked:true %>
  <%= f.label :delivery_address, "自身の住所" %>
  <%= current_public.postal_code %>　<%= current_public.address %>
  <%= current_public.family_name %>  <%= current_public.first_name%>
  <br>
  <%= f.radio_button :delivery_address, 1 %>
  <%= f.label :delivery_address, "登録先住所" %>
  <%= f.select :address_id, options_from_collection_for_select(current_public.addresses, :id, :address_display) %>
    <br>
    <%= f.radio_button :delivery_address, 2 %>
    <%= f.label :delivery_address, "新しいお届け先" %>
      郵便番号(ハイフンなし)<%= f.text_field :postal_code %><br>
      住所<%= f.text_field :delivery_address %><br>
      宛名<%= f.text_field :delivery_name %><br>
    <%= f.submit "確認画面へ進む" %>
  <% end %>